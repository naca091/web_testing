@page
@model BL3w_GroupProject.Pages.Manager.ProductPage.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutManager";
    int x = 0;
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>


<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="row justify-content-lg-start">
                <div class="col-3">
                    <h3>Product management</h3>
                </div>
                <div class="col-3">
                    <form class="d-md-inline-flex" role="search" method="get">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" asp-for="SearchText">
                        <button class="btn btn-primary" style="color: #fff" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                    </form>
                </div>
                <div class="col-2">
                    <p>
                        <a asp-page="./Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i></a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<table class="table table-hover">
    <thead style="background-color: #4169E1; text-align: center" class="text-white">
        <tr>
            <th>
                No
            </th>
            <th>
                Product Code
            </th>
            <th>
                Product Name
            </th>
            <th>
                Quantity
            </th>
            <th>
                Status
            </th>
            <th>
                Area Name
            </th>
            <th>
                Category Name
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Product)
        {
            <tr>
                <td class="text-center">@(++x)</td>
                <td class="text-center">
                    <a asp-page="./Edit" asp-route-id="@item.ProductId" style="text-decoration: none;">
                    @Html.DisplayFor(modelItem => item.ProductCode)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td style="text-align: center">
                    @switch (item.Status)
                    {
                        case 0:
                            {
                                <span class="text-danger">In-active</span>
                            }
                            break;
                        case 1:
                            {
                                <span class="text-success">Active</span>
                            }
                            break;
                    }
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Area.AreaName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <ul class="pagination">
        @for (int b = 1; b <= Model.TotalPages; b++)
        {
            <li class="page-item @(b == Model.curentPage ? "active" : "")">
                <a asp-page="./Index" asp-route-curentPage="@b" class="page-link">@b</a>
            </li>
        }
    </ul>
</div>
